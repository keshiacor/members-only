<div class="form-container">
  <%= form_with model: @post, class: "new-post-form" do |form| %>
    <!-- form fields for the post title and description -->
    <div class="form-field">
      <%= form.label :title, "Title:" %>
      <% title_error = @post.errors[:title].first %>
      <%= form.text_field :title,
            class: ["input-field", ("input-error" if title_error)].compact.join(" "),
            placeholder: "Enter a title" %>
      <% if title_error.present? %>
        <p class="field-error"><%= title_error %></p>
      <% end %>
    </div>

    <div class="form-field">
      <%= form.label :description, "Description:" %>
      <% description_error = @post.errors[:description].first %>
      <%= form.text_area :description,
            class: ["input-field", "textarea-field", ("input-error" if description_error)].compact.join(" "),
            placeholder: "Write your post here" %>
      <% if description_error.present? %>
        <p class="field-error"><%= description_error %></p>
      <% end %>
    </div>

    <div class="form-submit">
      <%= form.submit "Save Post", class: "primary-button" %>
    </div>
  <% end %>

  <%= link_to "Back to homepage", root_path, class: "back-link" %>
</div>